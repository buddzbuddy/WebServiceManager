            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.InteractionType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.InteractionType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>

