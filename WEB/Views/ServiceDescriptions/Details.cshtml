            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AgreementNo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AgreementNo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ConnectionType)
            </dt>

            <dd>
