@model IEnumerable<WEB.Models.Entities.TundukOrganization>

@{
    ViewBag.Title = "Выберите организацию";
}

<div class="card">
    <div class="card-header">
        <i class="fas fa-table"></i>
        @ViewBag.Title
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MemberCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MemberClass)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.XRoadInstance)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink("выбрать", "SelectTundukOrganization", new { serviceId = ViewBag.serviceId, returnAction = ViewBag.returnAction, id = item.Id }, new { @class = "btn btn-outline-primary" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MemberCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MemberClass)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.XRoadInstance)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

@section breadcrumb{
    <li class="breadcrumb-item">@Html.ActionLink("Список сервисов", "Index")</li>
    <li class="breadcrumb-item">@Html.ActionLink("Просмотр подключения", "Details", new { id = ViewBag.serviceId })</li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
}