@model IEnumerable<WEB.Models.Entities.TundukOrganization>

@{
    ViewBag.Title = "Справочник организаций Tunduk";
}
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        @ViewBag.Title
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-outline-primary" })
            <br /><br />
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th></th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>
                            @Html.DisplayNameFor(model => model.MemberCode)
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th></th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>
                            @Html.DisplayNameFor(model => model.MemberCode)
                        </th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink("Открыть", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MemberCode)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
@section scripts
{
    <!-- Page level plugin JavaScript-->
    <script src="~/dark_theme/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/dark_theme/vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Demo scripts for this page-->
    <script src="~/dark_theme/js/demo/datatables-demo.js"></script>
}

@section breadcrumb{
    <li class="breadcrumb-item active">@ViewBag.Title</li>
}